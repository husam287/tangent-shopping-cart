{
  "expo": {
    "name": "Tangent Shop",
    "slug": "tangent-shopping-cart",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "tangentshop",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#368cf2"
    },
    "updates": {
      "checkAutomatically": "ON_ERROR_RECOVERY"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hossam.tangentshop",
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "android": {
      "package": "com.hossam.tangentshop",
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#368cf2"
      }
    },
    "locales": {
      "en": "./src/i18n/en.json",
      "ar": "./src/i18n/ar.json"
    },
    "plugins": [
      "expo-localization",
      "expo-notifications",
      "@mmomtchev/expo-android-localized-app-name"
    ],
    "experiments": {
      "tsconfigPaths": true
    }
  }
}